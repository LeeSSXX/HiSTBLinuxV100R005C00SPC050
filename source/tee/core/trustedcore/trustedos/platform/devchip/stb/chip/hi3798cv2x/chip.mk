
#ADD PLATFORM MACRO HERE
CFG_HI_TEE_HI3798CV2X_SUPPORT=y

CONFIG_MEM_LAYOUT := $(CFG_HI_TVP_MEM_LAYOUT)

$(info CONFIG_MEM_LAYOUT=$(CONFIG_MEM_LAYOUT))

ifeq ($(CONFIG_MEM_LAYOUT),)
# 0x08000000 --------------------- 128M ---------------------
#             1M  Reserve For Parameter
# 0x08100000 --------------------- 129M
#             2M  ATF
# 0x08300000 --------------------- 131M
#             1M  SMMU Garbage
# 0x08400000 --------------------- 132M
#             4M  SMMU Page Table               Total: 88M
# 0x08800000 --------------------- 136M
#             16M Secure MMZ
# 0x09800000 --------------------- 152M
#             48M Secure OS
# 0x0B000000 --------------------- 184M
#             32M Reserve For Secure OS
# 0x0D800000 --------------------- 216M ---------------------
TRUSTEDCORE_TEXT_BASE = 0x09808000
TRUSTEDCORE_DEVCHIP_CFLAGS  += -DCONFIG_SYS_MEM_NA
TRUSTEDCORE_MEM_SIZE := 48
TRUSTEDCORE_TA_RUN_MEM_SIZE := 28
endif

ifeq ($(CONFIG_MEM_LAYOUT),3_75G)
TRUSTEDCORE_TEXT_BASE = 0xEC008000
TRUSTEDCORE_LARGER_MEM = true
TRUSTEDCORE_SHAREMEM_SIZE = 0x80000000
TRUSTEDCORE_DEVCHIP_CFLAGS  += -DCONFIG_SYS_MEM_3_75G
endif

ifeq ($(CONFIG_MEM_LAYOUT),3G)
TRUSTEDCORE_TEXT_BASE = 0xBC008000
TRUSTEDCORE_LARGER_MEM = true
TRUSTEDCORE_SHAREMEM_SIZE = 0x80000000
TRUSTEDCORE_DEVCHIP_CFLAGS  += -DCONFIG_SYS_MEM_3G
endif

ifeq ($(CONFIG_MEM_LAYOUT),2G)
TRUSTEDCORE_TEXT_BASE = 0x7C008000
TRUSTEDCORE_DEVCHIP_CFLAGS  += -DCONFIG_SYS_MEM_2G
endif

ifeq ($(CONFIG_MEM_LAYOUT),1G)
TRUSTEDCORE_TEXT_BASE = 0x3C008000
TRUSTEDCORE_DEVCHIP_CFLAGS  += -DCONFIG_SYS_MEM_1G
endif

ifeq ($(CONFIG_MEM_LAYOUT),512M)
TRUSTEDCORE_TEXT_BASE = 0x1C008000
TRUSTEDCORE_DEVCHIP_CFLAGS  += -DCONFIG_SYS_MEM_512M
endif

ifeq ($(CONFIG_MEM_LAYOUT),256M)
TRUSTEDCORE_TEXT_BASE = 0x0C008000
TRUSTEDCORE_DEVCHIP_CFLAGS  += -DCONFIG_SYS_MEM_256M

endif

ifeq ($(CONFIG_MEM_LAYOUT),1_5G)
TRUSTEDCORE_TEXT_BASE = 0x5C008000
TRUSTEDCORE_DEVCHIP_CFLAGS  += -DCONFIG_SYS_MEM_1_5G
endif
